<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#796D8E"
        android:padding="10dp">

        <TextView
            android:layout_marginEnd="5dp"
            android:id="@+id/argentinaNameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#CDFFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/editBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Email"
            android:textColor="#CDFFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/argentinaEmailTxt"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/argentinaNameTxt"
            app:layout_constraintStart_toStartOf="@+id/argentinaNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/argentinaNameTxt" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Date of Birth"
            android:textColor="#CDFFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/argentinaDOBTxt"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/argentinaEmailTxt"
            app:layout_constraintStart_toStartOf="@+id/argentinaEmailTxt"
            app:layout_constraintTop_toBottomOf="@+id/argentinaEmailTxt" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#CDFFFFFF"
            android:text="District"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/argentinaDistritTxt"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/argentinaDOBTxt"
            app:layout_constraintStart_toStartOf="@+id/argentinaDOBTxt"
            app:layout_constraintTop_toBottomOf="@+id/argentinaDOBTxt" />

        <TextView
            android:id="@+id/argentinaMobileTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mobile"
            android:textColor="#CDFFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/argentinaDistritTxt"
            app:layout_constraintStart_toStartOf="@+id/argentinaDistritTxt"
            app:layout_constraintTop_toBottomOf="@+id/argentinaDistritTxt" />

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/argentinaNameTxt" />

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editBtn"
            app:layout_constraintStart_toStartOf="@+id/editBtn"
            app:layout_constraintTop_toBottomOf="@+id/editBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>